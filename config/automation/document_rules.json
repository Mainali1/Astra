{
  "rules": [
    {
      "name": "invoices",
      "patterns": ["invoice", "bill", "receipt"],
      "target_directory": "documents/invoices/{year}/{month}",
      "ocr_template": "invoice",
      "data_extraction": {
        "fields": [
          {
            "name": "invoice_number",
            "type": "text",
            "pattern": "(?i)invoice[\\s#]+([A-Z0-9-]+)"
          },
          {
            "name": "date",
            "type": "date",
            "pattern": "(?i)(date|issued):\\s*(\\d{1,2}[/-]\\d{1,2}[/-]\\d{2,4})"
          },
          {
            "name": "amount",
            "type": "currency",
            "pattern": "(?i)total[:\\s]*(\\$?\\d+[,.]\\d{2})"
          },
          {
            "name": "vendor",
            "type": "text",
            "pattern": "(?i)from:|company:|vendor:|business name:"
          }
        ],
        "export_format": "excel",
        "export_file": "invoices_summary.xlsx"
      }
    },
    {
      "name": "contracts",
      "patterns": ["contract", "agreement", "terms"],
      "target_directory": "documents/contracts/{year}",
      "ocr_template": "contract",
      "data_extraction": {
        "fields": [
          {
            "name": "contract_id",
            "type": "text",
            "pattern": "(?i)contract[\\s#]+([A-Z0-9-]+)"
          },
          {
            "name": "effective_date",
            "type": "date",
            "pattern": "(?i)effective date:\\s*(\\d{1,2}[/-]\\d{1,2}[/-]\\d{2,4})"
          },
          {
            "name": "parties",
            "type": "text",
            "pattern": "(?i)between|party of the first part|party of the second part"
          }
        ],
        "export_format": "excel",
        "export_file": "contracts_summary.xlsx"
      }
    },
    {
      "name": "reports",
      "patterns": ["report", "analysis", "study"],
      "target_directory": "documents/reports/{year}/{category}",
      "ocr_template": "report",
      "data_extraction": {
        "fields": [
          {
            "name": "title",
            "type": "text",
            "pattern": "(?i)^[\\s\\n]*([\\w\\s-]+report)"
          },
          {
            "name": "date",
            "type": "date",
            "pattern": "(?i)date:\\s*(\\d{1,2}[/-]\\d{1,2}[/-]\\d{2,4})"
          },
          {
            "name": "author",
            "type": "text",
            "pattern": "(?i)prepared by:|author:|submitted by:"
          },
          {
            "name": "category",
            "type": "text",
            "pattern": "(?i)type:|category:|classification:"
          }
        ],
        "export_format": "excel",
        "export_file": "reports_summary.xlsx"
      }
    }
  ],
  "global_settings": {
    "backup_directory": "documents/backup/{date}",
    "error_directory": "documents/errors",
    "supported_formats": [".pdf", ".jpg", ".jpeg", ".png", ".tiff"],
    "ocr_settings": {
      "language": "eng",
      "dpi": 300,
      "psm": 3,
      "oem": 3
    },
    "export_settings": {
      "create_summary": true,
      "summary_format": "excel",
      "include_metadata": true,
      "backup_original": true
    },
    "notification_settings": {
      "notify_on_success": true,
      "notify_on_error": true,
      "notify_on_new_pattern": true
    }
  }
} 