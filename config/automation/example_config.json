{
  "macros": [
    {
      "name": "morning_routine",
      "trigger_phrase": "start my morning routine",
      "description": "Morning routine automation that checks weather, calendar, and news",
      "actions": [
        {
          "feature_name": "weather",
          "command": "get_weather",
          "parameters": {
            "forecast_days": 1
          }
        },
        {
          "feature_name": "calendar",
          "command": "get_today_events",
          "parameters": {}
        },
        {
          "feature_name": "news",
          "command": "get_top_headlines",
          "parameters": {
            "categories": ["general", "technology"],
            "limit": 5
          }
        },
        {
          "feature_name": "reminder",
          "command": "get_due_reminders",
          "parameters": {
            "timeframe": "today"
          }
        }
      ],
      "schedule": "07:00",
      "location_trigger": null,
      "time_trigger": "morning",
      "activity_trigger": "wake_up"
    },
    {
      "name": "work_mode",
      "trigger_phrase": "start work mode",
      "description": "Set up work environment and check project status",
      "actions": [
        {
          "feature_name": "system_monitor",
          "command": "optimize_performance",
          "parameters": {
            "profile": "work"
          }
        },
        {
          "feature_name": "project_manager",
          "command": "get_project_status",
          "parameters": {
            "project": "current"
          }
        },
        {
          "feature_name": "email_manager",
          "command": "check_important_emails",
          "parameters": {
            "priority": "high"
          }
        }
      ]
    }
  ],
  "notification_rules": [
    {
      "title": "Meeting Reminder",
      "message": "You have a meeting in 10 minutes",
      "conditions": {
        "event_type": "calendar_event",
        "time_before": "10min"
      },
      "priority": "high",
      "timeout": 30
    },
    {
      "title": "Task Due",
      "message": "Task '{task_name}' is due soon",
      "conditions": {
        "event_type": "task_due",
        "time_before": "1hour"
      },
      "priority": "normal",
      "timeout": 20
    },
    {
      "title": "Location-based Reminder",
      "message": "Don't forget to {action} while you're at {location}",
      "conditions": {
        "event_type": "location",
        "location_type": "store",
        "radius": "100m"
      },
      "priority": "normal",
      "timeout": 15
    }
  ],
  "workflows": [
    {
      "name": "document_processor",
      "description": "Process incoming documents with OCR and organize them",
      "trigger_type": "event",
      "trigger_value": "file:downloads/*.{pdf,jpg,png}",
      "steps": [
        {
          "name": "ocr_processing",
          "action": "automation_manager.extract_data_from_image",
          "parameters": {
            "template": "invoice"
          },
          "timeout": 30
        },
        {
          "name": "data_export",
          "action": "automation_manager.export_to_spreadsheet",
          "parameters": {
            "output_path": "processed/invoices.xlsx"
          },
          "condition": "previous_step_success"
        },
        {
          "name": "file_organization",
          "action": "file_manager.organize_files",
          "parameters": {
            "rules": "document_rules.json"
          }
        }
      ]
    }
  ],
  "scripts": [
    {
      "name": "backup_documents",
      "description": "Create backup of important documents",
      "command": "robocopy C:\\Documents D:\\Backup\\Documents /MIR",
      "working_directory": null,
      "environment_vars": {},
      "voice_triggers": ["backup my documents", "create document backup"],
      "schedule": "daily:23:00",
      "platform": "windows",
      "requires_confirmation": true
    },
    {
      "name": "system_cleanup",
      "description": "Clean temporary files and optimize system",
      "command": "cleanmgr /sagerun:1",
      "working_directory": null,
      "environment_vars": {},
      "voice_triggers": ["clean my system", "run system cleanup"],
      "schedule": "weekly:sun:02:00",
      "platform": "windows",
      "requires_confirmation": true
    }
  ]
} 